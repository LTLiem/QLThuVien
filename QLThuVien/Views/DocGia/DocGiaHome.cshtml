        <!-- content -->
        <div id="content">

            <!-- title -->
            <div id="page-title">
                <span class="title">Quản lý độc giả</span>
                <span class="subtitle">Mượn trả sách</span>
            </div>
            <!-- ENDS title -->
            <!-- sidebar -->
            <ul id="sidebar">
                <!-- init sidebar -->
                <li>
                    <h6>Chức năng</h6>
                    <ul>
                        <li class="cat-item"><a href="#" title="View all posts">Mượn trả sách</a></li>
