                        <li class="cat-item"><a href="#" title="View all posts">Đổi mật khẩu</a></li>
                    </ul>
                </li>
                <!-- ENDS init sidebar -->
            </ul>
            <!-- ENDS sidebar -->
            <!-- Posts -->
            <div id="posts">

                <!-- post -->
                <div class="post">
                    <h1><a href="single.html">Làm trong này</a></h1>

                    <!-- shadow -->
                    <div class="thumb-shadow">
                        <div class="the-excerpt">
                            Nội dung
