                <li>
                    <h6>Cá nhân</h6>
                    <ul>
                        <li class="cat-item"><a href="#" title="View all posts">Sửa thông tin</a></li>
                        <li class="cat-item"><a href="#" title="View all posts">Đổi mật khẩu</a></li>
                    </ul>
                </li>
                <!-- ENDS init sidebar -->
            </ul>
            <!-- ENDS sidebar -->
