    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<!-- MAIN -->
<div id="main">
    <!-- wrapper-main -->
    <div class="wrapper">


        <!-- content -->
        <div id="content">

            <!-- title -->
            <div id="page-title">
                <span class="title">Quản lý độc giả</span>
            </div>
            <!-- ENDS title -->
            <!-- sidebar -->
            <ul id="sidebar">
                <!-- init sidebar -->
