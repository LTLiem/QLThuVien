@{
    Layout = "~/Views/Shared/_LayoutHead.cshtml";
    if (Session["Username"] == null)
    {
        ViewBag.User = "Khách";
        ViewBag.LoginNotes = "<p>Để sử dụng chức năng của thư viện, vui lòng <a href=\"/Home/Login\">đăng nhập</a></p>";
    }
    else
    {
        ViewBag.User = Session["Username"];
        ViewBag.LoginNotes = "<a href=\"/Home/Logout\">Logout</a>";
    }
}

<body class="home">

	<!-- HEADER -->
	<div id="header">
	<!-- wrapper-header -->
	    <div class="wrapper">
			<a href="index.html"><img src="../Content/img/logo.png" alt="Thư viện Đại học Khoa Học Tự Nhiên" class="title" id="logo" /></a>
            <!-- INFO -->
            <div class="infoUser">
                <div>
                    <p>Xin chào, @ViewBag.User @ViewBag.UserInfo</p>
                    @Html.Raw(ViewBag.LoginNotes)
                </div>
            </div>
            <!-- ENDS INFO -->
        </div>
        <div>
           

        </div>
	<!-- ENDS wrapper-header -->					
	</div>
    <!-- ENDS HEADER -->

    @RenderBody()


    <!-- Bottom -->
	<div id="bottom">
		<!-- wrapper-bottom -->
		<div class="wrapper">
			<div id="bottom-text">2014</div>
		</div>
		<!-- ENDS wrapper-bottom -->
	</div>
	<!-- ENDS Bottom -->
</body>